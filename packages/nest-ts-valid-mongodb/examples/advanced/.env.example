# Environment variables for advanced example

# Application
NODE_ENV=development
PORT=3000

# Primary Database
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=advanced_example

# Analytics Database (separate connection)
ANALYTICS_MONGO_URI=mongodb://localhost:27018
ANALYTICS_DB_NAME=analytics_db

# Optional: If using authentication
# MONGO_URI=mongodb://admin:password@localhost:27017/advanced_example?authSource=admin
# ANALYTICS_MONGO_URI=mongodb://admin:password@localhost:27018/analytics_db?authSource=admin
